{
  "rewrites": [
    {
      "source": "/api/mercadopago_create_pix",
      "destination": "/api/mercadopago_ops?operation=create_pix"
    },
    {
      "source": "/api/mercadopago_create_invoice",
      "destination": "/api/mercadopago_ops?operation=create_invoice"
    },
    {
      "source": "/api/mercadopago_webhook",
      "destination": "/api/mercadopago_ops?operation=webhook"
    },
    {
      "source": "/api/test_mercadopago",
      "destination": "/api/mercadopago_ops?operation=test"
    },
    {
      "source": "/api/debug_pix",
      "destination": "/api/mercadopago_ops"
    },
    {
      "source": "/api/check_pix_status",
      "destination": "/api/pix_operations?operation=check_status"
    },
    {
      "source": "/api/update_pix_status",
      "destination": "/api/pix_operations?operation=update_status"
    },
    {
      "source": "/api/list_pix_transactions",
      "destination": "/api/pix_operations?operation=list_transactions"
    },
    {
      "source": "/api/efi_create_pix",
      "destination": "/api/efi_ops?operation=create_pix"
    },
    {
      "source": "/api/efi_send_pix",
      "destination": "/api/efi_ops?operation=send_pix"
    },
    {
      "source": "/api/efi_webhook",
      "destination": "/api/efi_ops?operation=webhook"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}