{
  "rewrites": [
    {
      "source": "/api/mercadopago_create_pix",
      "destination": "/api/mercadopago_ops?operation=create_pix"
    },
    {
      "source": "/api/mercadopago_webhook",
      "destination": "/api/mercadopago_ops?operation=webhook"
    },
    {
      "source": "/api/check_pix_status",
      "destination": "/api/check_pix_status"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}