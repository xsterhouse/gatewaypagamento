{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Add Node.js types for serverless functions */
    "types": ["node"]
  },
  "include": ["src", "api", "vite.config.ts", "vite-api-plugin.ts", "test-email.js", "check-email-status.js", "testar-subdominio.js", "force-deploy-final.js", "debug-dashboard.js"]
}